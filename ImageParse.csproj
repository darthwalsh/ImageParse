<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    
    <PackageId>ImageParse</PackageId>
    <Version>1.0.0</Version>
    <Authors>Carl Walsh and contributors</Authors>
    <Description>Library to help debug image parsing code</Description>
    <Copyright>Copyright (c) Carl Walsh and contributors.</Copyright>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/darthwalsh/ImageParse</PackageProjectUrl>
    <PackageTags>Image Parse Bitmap Core</PackageTags>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/darthwalsh/ImageParse</RepositoryUrl>
    
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="4.5.1" />
  </ItemGroup>
  

  <ItemGroup>
    <Compile Remove="Tests\**"/>
  </ItemGroup>

</Project>
